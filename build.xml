<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="substance-extras" default="all">
	<property file="local.build.properties" />
	<property file="build.properties" />

	<!-- Compiler options -->
	<patternset id="javac.excluded" />
	<patternset id="javac.resources">
		<include name="**/?*.properties" />
		<include name="**/?*.xml" />
		<include name="**/?*.gif" />
		<include name="**/?*.png" />
		<include name="**/?*.jpeg" />
		<include name="**/?*.jpg" />
		<include name="**/?*.ttf" />
		<include name="**/?*.license" />
		<include name="**/?*.shape" />
	</patternset>
	<!-- JDK definitions -->

	<path id="jdk.classpath">
		<fileset dir="${jdk.home}">
			<include name="jre/lib/charsets.jar" />
			<include name="jre/lib/deploy.jar" />
			<include name="jre/lib/javaws.jar" />
			<include name="jre/lib/jce.jar" />
			<include name="jre/lib/jsse.jar" />
			<include name="jre/lib/plugin.jar" />
			<include name="jre/lib/rt.jar" />
			<include name="jre/lib/ext/dnsns.jar" />
			<include name="jre/lib/ext/localedata.jar" />
			<include name="jre/lib/ext/sunjce_provider.jar" />
			<include name="jre/lib/ext/sunpkcs11.jar" />
		</fileset>
	</path>

	<property name="project.jdk.home" value="${jdk.home}" />
	<property name="project.jdk.classpath" value="jdk.classpath" />
	<!-- Project Libraries -->
	<!-- Global Libraries -->


	<dirname property="module.substance-extras.basedir" file="${ant.file}" />

	<property name="javac.args.substance-extras" value="${javac.args}" />
	<property name="compiler.args.substance-extras" value="${compiler.args}" />

	<property name="substance-extras.build.dir" value="${module.substance-extras.basedir}/build/" />
	<property name="substance-extras.output.dir" value="${substance-extras.build.dir}/classes" />
	<property name="substance-extras.drop.dir" value="${module.substance-extras.basedir}/drop" />
	<property name="substance-extras.src.dir" value="${module.substance-extras.basedir}/src/" />
	<property name="substance.version" value="6.0final Sonoma" />

	<path id="substance-extras.module.bootclasspath">
		<!-- Paths to be included in compilation bootclasspath -->
	</path>

	<property name="module.jdk.home.substance-extras" value="${project.jdk.home}" />
	<property name="module.jdk.classpath.substance-extras" value="${project.jdk.classpath}" />

	<path id="substance-extras.module.classpath">
		<path refid="${module.jdk.classpath.substance-extras}" />
        <pathelement location="${module.substance-extras.basedir}/../substance/drop/substance.jar"/>
        <pathelement location="${module.substance-extras.basedir}/../substance/drop/substance-tst.jar"/>
        <pathelement location="${module.substance-extras.basedir}/../substance/drop/substance-tools.jar"/>
        <pathelement location="${module.substance-extras.basedir}/../substance/lib/forms-1.2.0.jar"/>
	</path>

	<patternset id="excluded.from.module.substance-extras" />

	<patternset id="excluded.from.compilation.substance-extras">
		<patternset refid="excluded.from.module.substance-extras" />
		<patternset refid="javac.excluded" />
	</patternset>

	<path id="substance-extras.module.sourcepath">
		<dirset dir="${substance-extras.src.dir}">
	            <include name="org/pushingpixels/substance/" />
		</dirset>
	</path>

	<path id="substance-extras.module.testsourcepath">
		<dirset dir="${substance-extras.src.dir}">
            <include name="test" />
            <include name="docrobot" />
		</dirset>
	</path>

	<path id="substance-extras.module.toolssourcepath">
		<dirset dir="${substance-extras.src.dir}">
			<include name="tools" />
		</dirset>
	</path>

	<target name="compile.module.substance-extras" depends="compile.module.substance-extras.production,compile.module.substance-extras.tests,compile.module.substance-extras.tools" description="compile module substance-extras" />

	<target name="compile.module.substance-extras.production" description="compile module substance-extras production classes">
		<mkdir dir="${substance-extras.output.dir}" />
		<javac source="${javac.source}" target="${javac.target}" encoding="${javac.encoding}" destdir="${substance-extras.output.dir}" debug="${javac.debug}" nowarn="${javac.generate.no.warnings}" memoryMaximumSize="${javac.max.memory}" fork="true" executable="${module.jdk.home.substance-extras}/bin/javac">
			<compilerarg line="${javac.args.substance-extras}" />
			<bootclasspath refid="substance-extras.module.bootclasspath" />
			<classpath refid="substance-extras.module.classpath" />
			<src refid="substance-extras.module.sourcepath" />
			<patternset refid="excluded.from.compilation.substance-extras" />
		</javac>
		<copy todir="${substance-extras.output.dir}">
			<fileset dir="${substance-extras.src.dir}">
				<patternset refid="javac.resources" />
				<type type="file" />
				<patternset refid="excluded.from.compilation.substance-extras" />
			</fileset>
		</copy>
	</target>

	<target name="compile.module.substance-extras.tests"  description="compile module substance-extras test classes" unless="skip.tests">
		<mkdir dir="${substance-extras.output.dir}" />
		<javac source="${javac.source}" target="${javac.target}" encoding="${javac.encoding}" destdir="${substance-extras.output.dir}" debug="${javac.debug}" nowarn="${javac.generate.no.warnings}" memoryMaximumSize="${javac.max.memory}" fork="true" executable="${module.jdk.home.substance-extras}/bin/javac">
			<compilerarg line="${javac.args.substance-extras}" />
			<bootclasspath refid="substance-extras.module.bootclasspath" />
			<classpath refid="substance-extras.module.classpath" />
			<src refid="substance-extras.module.testsourcepath" />
			<patternset refid="excluded.from.compilation.substance-extras" />
		</javac>
		<copy todir="${substance-extras.output.dir}/test">
			<fileset dir="${substance-extras.src.dir}/test">
				<patternset refid="javac.resources" />
				<type type="file" />
				<patternset refid="excluded.from.compilation.substance-extras" />
			</fileset>
		</copy>
	</target>

	<target name="compile.module.substance-extras.tools" description="compile module substance tool classes">
		<mkdir dir="${substance-extras.output.dir}" />
		<javac source="${javac.source}" target="${javac.target}" encoding="${javac.encoding}" destdir="${substance-extras.output.dir}" debug="${javac.debug}" nowarn="${javac.generate.no.warnings}" memoryMaximumSize="${javac.max.memory}" fork="true" executable="${module.jdk.home.substance-extras}/bin/javac">
			<compilerarg line="${javac.args.substance-extras}" />
			<bootclasspath refid="substance-extras.module.bootclasspath" />
			<classpath refid="substance-extras.module.classpath" />
			<src refid="substance-extras.module.toolssourcepath" />
			<patternset refid="excluded.from.compilation.substance-extras" />
		</javac>
		<copy todir="${substance-extras.output.dir}/tools">
			<fileset dir="${substance-extras.src.dir}/tools">
				<patternset refid="javac.resources" />
				<type type="file" />
				<patternset refid="excluded.from.compilation.substance-extras" />
			</fileset>
		</copy>
	</target>

	<target name="clean.module.substance-extras" description="cleanup module">
		<delete dir="${substance-extras.output.dir}" />
	</target>

	<target name="init" description="Build initialization">
		<!-- Perform any build initialization in this target -->
	</target>

	<target name="jar-bin" description="create runtime jar">
		<delete file="${substance-extras.drop.dir}/substance-extras.jar" />
		<mkdir dir="${substance-extras.drop.dir}"/>
		<jar compress="true" destfile="${substance-extras.drop.dir}/substance-extras.jar">
			<fileset dir="${substance-extras.output.dir}/" excludes="test/** tools/**" />
			<fileset dir="${module.substance-extras.basedir}/" includes="resources/**" />
			<manifest>
				<attribute name="Substance-Version" value="${substance.version}" />
				<attribute name="Substance-Extras-BuildStamp" value="${build.time}" />
			</manifest>
		</jar>
		<copy file="${substance-extras.drop.dir}/substance-extras.jar" todir="${module.substance-extras.basedir}/www/webstart" />
	</target>

	<target name="jar-bin-tst" description="create test runtime jar">
		<delete file="${substance-extras.drop.dir}/substance-extras-tst.jar" />
		<jar destfile="${substance-extras.drop.dir}/substance-extras-tst.jar">
			<fileset dir="${substance-extras.output.dir}/" includes="test/**/*.class" />
            <fileset dir="${substance-extras.src.dir}/" includes="test/resource/**" />
			<manifest>
				<attribute name="Substance-Version" value="${substance.version}" />
				<attribute name="Substance-Extras-BuildStamp" value="${build.time}" />
			</manifest>
		</jar>
		<copy file="${substance-extras.drop.dir}/substance-extras-tst.jar" todir="${module.substance-extras.basedir}/www/webstart" />
	</target>

	<target name="jar-bin-tools" description="create tools runtime jar">
		<delete file="${substance-extras.drop.dir}/substance-extras-tools.jar" />
		<jar destfile="${substance-extras.drop.dir}/substance-extras-tools.jar">
            <fileset dir="${substance-extras.output.dir}/" includes="tools/**/*.class tools/**/*.jpg" />
			<manifest>
				<attribute name="Substance-Version" value="${substance.versionKey}" />
				<attribute name="Substance-BuildStamp" value="${build.time}" />
			</manifest>
		</jar>
	</target>

	<target name="timestamp">
		<tstamp>
			<format property="build.time" pattern="MMMM d, yyyy hh:mm:ss z" />
		</tstamp>
		<echo message="Beginning build: ${build.time}" />
		<echo message="Java home: ${java.home}" />
		<echo message="Java version: ${ant.java.version}" />
		<echo message="Ant version: ${ant.version}" />
	</target>

	<target name="distro" description="create distribution">
		<delete file="${module.substance-extras.basedir}/substance-extras-all.zip" />
		<zip destfile="${module.substance-extras.basedir}/substance-extras-all.zip" compress="true">
			<fileset dir="${module.substance-extras.basedir}">
				<include name="lib/**" />
				<include name="src/**" />
				<include name="docs/**" />
				<include name="www/*.html" />
				<include name="www/images/**" />
				<include name="build.xml" />
			</fileset>
		</zip>
	</target>

	<target name="jar" depends="jar-bin, jar-bin-tst, jar-bin-tools" description="create all jars" />

	<target name="clean" depends="clean.module.substance-extras" description="cleanup all" />

	<target name="all" depends="timestamp, init, clean, compile.module.substance-extras, jar" description="build all" />
</project>